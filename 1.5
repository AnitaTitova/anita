using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ylpr
{
    class Program
    {
        private static int i;

        static void Main(string[] args)
        {
            int[] array = new int[18];
            Console.WriteLine("При вводе элементов массива первые несколько должны быть одинаковыми");
            for (int i = 0; i < array.Length; i++)
            {
                Console.WriteLine("Введите {0}-й элемент массива", i+1);
                array[i] = int.Parse(Console.ReadLine());
            }
            int a = array[0];
            int c = 0;
            while (a == array[i])
            {
                c++;
                i++;
            }
            Console.WriteLine();
            Console.WriteLine(c);
        }
    }
}
