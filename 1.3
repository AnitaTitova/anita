using System;
class program
{
    static void Main(string[] args)
    {
        int[] myArray = { 7, 12, 23, 14, 51, 28, 3, 15 };
        int sum = 0;
        for (int i = 0; i < myArray.Length; i++)
        {
            if (myArray[i] % 2 == 0)
            {
                sum += myArray[i];
            }
        }
        Console.WriteLine(sum);
        Console.ReadLine();
    }
}
